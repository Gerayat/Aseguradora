                @Html.ValidationMessageFor(model => model.codEstado, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.codDanioResolucion, "Daño", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("codDanioResolucion", null, htmlAttributes: new { @class = "form-control" })
