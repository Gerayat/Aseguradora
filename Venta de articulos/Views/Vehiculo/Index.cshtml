@model IEnumerable<Venta_de_articulos.Models.tbVehiculo>

@{
    ViewBag.Title = "Index";
}

<h2>Vehiculos</h2>

<div class="row">
    <div class="col-md-10">
        @Html.ActionLink("Registrar Vehículo", "Create")
    </div>
    <div class="col-md-2">
        @Html.ActionLink("Regresar", "Index", "Seguro")
    </div>
</div>
 
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Placa")
        </th>
        <th>
            @Html.DisplayName("Marca")
        </th>
        <th>
            @Html.DisplayName("Linea")
        </th>
        <th>
            @Html.DisplayName("Modelo")
        </th>
        <th>
            @Html.DisplayName("Color")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.placa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.marca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.linea)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.modelo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.color)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.codVehiculo }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.codVehiculo }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.codVehiculo })
        </td>
    </tr>
}

</table>
