@model IEnumerable<Venta_de_articulos.Models.tbVehiculo>

@{
    ViewBag.Title = "Index";
}

<h2>Vehículos</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create")"><span class="glyphicon glyphicon-plus"></span> Agregar vehículo</a>
    <a class="btn btn-success" href="@Url.Action("Index", "Seguro")"><span class="glyphicon glyphicon-arrow-left"></span> Regresar</a>
</p>

<div class="panel panel-default">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    Placa
                </th>
                <th>
                    Marca
                </th>
                <th>
                    Linea
                </th>
                <th>
                    Modelo
                </th>
                <th>
                    Color
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.placa
                    </td>
                    <td>
                        @item.marca
                    </td>
                    <td>
                        @item.linea
                    </td>
                    <td>
                        @item.modelo
                    </td>
                    <td>
                        @item.color
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.codVehiculo })" class="btn btn-sm btn-primary"><span class="glyphicon glyphicon-pencil"></span></a>
                        <a href="@Url.Action("Delete", new { id = item.codVehiculo })" class="btn btn-sm btn-danger"><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>