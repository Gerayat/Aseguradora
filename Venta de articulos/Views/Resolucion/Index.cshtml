@model IEnumerable<Venta_de_articulos.Models.tbResolucion>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de resoluciones</h2>
<div class="row">
    <div class="col-md-10">
        @Html.ActionLink("Nueva resolución", "Create")
    </div>
    <div class="col-md-2">
        @Html.ActionLink("Regresar", "Index", "Reclamo")
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Resolución")
        </th>
        <th>
            @Html.DisplayName("Estado")
        </th>
        <th>
            @Html.DisplayName("Descripción")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.resolucion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbReclamo.descripción)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.codResolucion }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.codResolucion }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.codResolucion })
        </td>
    </tr>
}

</table>
