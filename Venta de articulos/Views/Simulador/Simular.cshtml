
@{
ViewBag.Title = "Simular";
}

<h2>Simular</h2>
@using (Html.BeginForm("Simular","Simulador",FormMethod.Post))
{
<div class="form-group">
    <label class="control-label col-md-3" for="numero_simulaciones">Numero de horas a sumular: </label>
    <div class="col-md-2">
        @Html.Editor("horas", new { htmlAttributes = new { @class = "form-control", @id = "horas", @name = "horas", @type="number" } })
    </div>
    <div class="col-md-7">
        <button type="submit" class="btn btn-info"><span class="glyphicon glyphicon-check"></span> Simular</button>
    </div>
</div>
}
<br />

 



