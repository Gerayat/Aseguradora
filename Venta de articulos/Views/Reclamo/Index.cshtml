@model IEnumerable<Venta_de_articulos.Models.tbReclamo>

@{
    ViewBag.Title = "Reclamos";
}

<h2>Control de reclamos</h2>

<div style="border-color:lightgray;border-style:solid; border-width:1px; padding:9px; height:50px;">
    <div>
        @Html.ActionLink("Registrar nuevo reclamo", "Create")
        &emsp;&emsp;
        @Html.ActionLink("Daños", "Index", "Danio")
        &emsp;&emsp;
        @Html.ActionLink("Resoluciones", "Index", "Resolucion")
    </div>
</div>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayName("Descripción")
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.tbSeguro.codSeguro)
        </th>*@
        <th>
            @Html.DisplayName("Estado")
        </th>
        <th>Acciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.descripción)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.tbSeguro.codSeguro)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.codEstado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.codReclamo }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.codReclamo }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.codReclamo })
        </td>
    </tr>
}

</table>
