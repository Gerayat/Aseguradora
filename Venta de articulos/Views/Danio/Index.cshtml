@model IEnumerable<Venta_de_articulos.Models.tbDanio>

@{
    ViewBag.Title = "Index";
}

<h2>Registros de daños</h2>
<div class="row">
    <div class="col-md-10">
        @Html.ActionLink("Nuevo daño", "Create")
    </div>
    <div class="col-md-2">
        @Html.ActionLink("Regresar", "Index", "Reclamo")
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Descripción")
        </th>
        <th>
            @Html.DisplayName("Costo de reparación")
        </th>
        <th>
            @Html.DisplayName("Estado")
        </th>
        <th>
            @Html.DisplayName("Descripción")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.costoReparacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbReclamo.descripción)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.codDanio }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.codDanio }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.codDanio })
        </td>
    </tr>
}

</table>
